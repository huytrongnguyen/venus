{
  "name": "venus",
  "version": "1.0.0",
  "description": "Venus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/huytrongnguyen/venus.git"
  },
  "bugs": "https://github.com/huytrongnguyen/venus/issues",
  "scripts": {
    "build": "npm run venus-fonts-copy && npm run venus-css-build",
    "watch": "npm run solutions-watch",
    "master-data-build": "esbuild src/MasterData/ClientApp/app.tsx --bundle --outfile=src/Venus/wwwroot/master-data.js --loader:.tsx=tsx --format=iife --minify",
    "reports-watch": "esbuild src/Reports/ClientApp/app.tsx --bundle --outfile=src/Venus/wwwroot/reports.js --loader:.tsx=tsx --format=iife --watch",
    "reports-build": "esbuild src/Reports/ClientApp/app.tsx --bundle --outfile=src/Venus/wwwroot/reports.js --loader:.tsx=tsx --format=iife --minify",
    "load-build": "esbuild src/Load/ClientApp/app.tsx --bundle --outfile=src/Venus/wwwroot/load.js --loader:.tsx=tsx --format=iife --minify",
    "solutions-watch": "esbuild src/Solutions/ClientApp/app.tsx --bundle --outfile=src/Venus/wwwroot/solutions.js --loader:.tsx=tsx --format=iife --watch",
    "solutions-build": "esbuild src/Solutions/ClientApp/app.tsx --bundle --outfile=src/Venus/wwwroot/solutions.js --loader:.tsx=tsx --format=iife --minify",
    "admin-build": "npm run admin-js-build",
    "admin-css-build": "sass src/Administration/ClientApp/app.scss src/Venus/wwwroot/admin.css --style=compressed --no-source-map",
    "admin-js-build": "esbuild src/Administration/ClientApp/app.tsx --bundle --outfile=src/Venus/wwwroot/admin.js --loader:.tsx=tsx --format=iife --minify",
    "auth-build": "esbuild src/Auth/ClientApp/app.tsx --bundle --outfile=src/Venus/wwwroot/auth.js --loader:.tsx=tsx --format=iife --minify",
    "rosie-js-build": "cd src/Shared/ClientApp/rosie && npm run js && cd ../../../../ && cp -r src/Shared/ClientApp/rosie/dist/js node_modules/rosie-ui/dist/",
    "rosie-css-build": "cd src/Shared/ClientApp/rosie && npm run css && cd ../../../../ && npm run venus-css-build",
    "venus-css-build": "sass src/Venus/ClientApp/scss/app.scss src/Venus/wwwroot/venus.css --style=compressed --no-source-map",
    "venus-bootstrap-copy": "cp node_modules/bootstrap/dist/js/bootstrap.bundle.min.js src/Venus/wwwroot/ && cp node_modules/bootstrap/dist/js/bootstrap.bundle.min.js.map src/Venus/wwwroot/",
    "venus-fonts-copy": "cp -r node_modules/rosie-ui/dist/webfonts src/Venus/wwwroot/"
  },
  "dependencies": {
    "rosie-ui": "0.2.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-router-dom": "7.7.1"
  },
  "devDependencies": {
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@types/react-router-dom": "5.3.3",
    "esbuild": "0.25.8",
    "sass": "1.89.2",
    "typescript": "5.8.3"
  },
  "alias": {
    "masterdata/core": "./src/MasterData/ClientApp/core",
    "reports/core": "./src/Reports/ClientApp/core",
    "solutions/core": "./src/Solutions/ClientApp/core",
    "admin/core": "./src/Administration/ClientApp/core",
    "venus/components": "./src/Venus/ClientApp/ts/components",
    "venus/core": "./src/Venus/ClientApp/ts/core"
  }
}