{
  "name": "venus",
  "version": "1.0.0",
  "description": "Venus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/huytrongnguyen/venus.git"
  },
  "bugs": "https://github.com/huytrongnguyen/venus/issues",
  "scripts": {
    "build": "npm run rosie-build && npm run venus-build",
    "rosie-build": "npm run rosie-copy && npm run rosie-css-copy",
    "rosie-copy": "cp -r src/Shared/ClientApp/rosie/dist node_modules/rosie-ui/",
    "rosie-fonts-copy": "cp -r node_modules/rosie-ui/dist/webfonts src/Venus/wwwroot",
    "rosie-css-copy": "cp node_modules/rosie-ui/dist/css/rosie.css src/Venus/wwwroot/",
    "features-build": "npm run features-js-build",
    "features-js-build": "esbuild src/Features/ClientApp/app.tsx --bundle --outfile=src/Venus/wwwroot/features.js --loader:.tsx=tsx --format=iife --minify",
    "admin-build": "npm run admin-js-build",
    "admin-css-build": "sass src/Administration/ClientApp/app.scss src/Venus/wwwroot/admin.css --style=compressed --no-source-map",
    "admin-js-build": "esbuild src/Administration/ClientApp/app.tsx --bundle --outfile=src/Venus/wwwroot/admin.js --loader:.tsx=tsx --format=iife --minify",
    "admin-js-watch": "esbuild src/Administration/ClientApp/app.tsx --bundle --outfile=src/Venus/wwwroot/admin.js --loader:.tsx=tsx --format=iife --watch",
    "auth-build": "esbuild src/Auth/ClientApp/app.tsx --bundle --outfile=src/Venus/wwwroot/auth.js --loader:.tsx=tsx --format=iife --minify",
    "venus-build": "sass src/Venus/ClientApp/scss/app.scss src/Venus/wwwroot/venus.css --style=compressed --no-source-map"
  },
  "dependencies": {
    "jquery": "3.7.1",
    "rosie-ui": "0.2.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-router-dom": "7.7.1"
  },
  "devDependencies": {
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@types/react-router-dom": "5.3.3",
    "esbuild": "0.25.8",
    "sass": "1.89.2",
    "typescript": "5.8.3"
  },
  "alias": {
    "features/core": "./src/Features/ClientApp/core",
    "admin/core": "./src/Administration/ClientApp/core",
    "venus/components": "./src/Venus/ClientApp/ts/components",
    "venus/core": "./src/Venus/ClientApp/ts/core",
    "rosie/components": "./src/Shared/ClientApp/rosie/ts/components",
    "rosie/core": "./src/Shared/ClientApp/rosie/ts/core",
    "rosie": "./src/Shared/ClientApp/rosie"
  }
}