{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [ "dom", "esnext" ],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "masterdata/core": ["src/MasterData/ClientApp/core"],
      "reports/core": ["src/Reports/ClientApp/core"],
      "solutions/core": ["src/Solutions/ClientApp/core"],
      "admin/core": ["src/Administration/ClientApp/core"],
      "venus/components": ["src/Venus/ClientApp/ts/components"],
      "venus/core": ["src/Venus/ClientApp/ts/core"]
    },
    "removeComments": true,
    "declaration": true,
    "strictPropertyInitialization": false,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}